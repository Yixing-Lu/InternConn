<%- include("../partials/header") %>

<div class="container mt-5 pt-5">
	<h1 style="text-align:center">Create a New Project</h1>
	<div class="row">
		<div style="width:30%; margin: 25px auto;">
			<form action="/projects" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image Url">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Description">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="companyUrl" placeholder="Url of Company">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="jobTitle" placeholder="Job Title">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="jobRequriement" placeholder="Job Requriement">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
			</form>
			<a href="/projects">Go Back</a>
		<div>
		
	</div>
</div>
<%- include("../partials/footer") %>