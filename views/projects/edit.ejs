<%- include("../partials/header") %>
<div class="container mt-5 pt-5">
	<div class="row">
		<div style="width:30%; margin: 25px auto;">
			<form action="/projects/<%= project._id %>?_method=PUT" method="POST">

				<div class="form-group">Company Name
					<input class="form-control" type="text" name="project[name]" value="<%= project.name %>">
				</div>
				
				<div class="form-group">Image Url
					<input class="form-control" type="text" name="project[image]" value="<%= project.img %>">
				</div>

				<div class="form-group">Description
					<input class="form-control" type="text" name="project[description]" value="<%= project.description %>">
				</div>

				<div class="form-group">Company Url
					<input class="form-control" type="text" name="project[companyUrl]" value="<%= project.companyUrl %>">
				</div>

				<div class="form-group">Job Title
					<input class="form-control" type="text" name="project[jobTitle]" value="<%= project.jobTitle %>">
				</div>

				<div class="form-group">Job Requriement
					<input class="form-control" type="text" name="project[jobRequriement]" value="<%= project.jobRequriement %>">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
			</form>
			<a href="/projects">Go Back</a>
		<div>
		
	</div>
</div>
<%- include("../partials/footer") %>