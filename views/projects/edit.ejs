<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">Edit <%= project.name %></h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/projects/<%= project._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="project[name]" value="<%= project.name %>">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="project[image]" value="<%= project.img %>">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="project[description]" value="<%= project.description %>">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
			</form>
			<a href="/projects">Go Back</a>
		<div>
		
	</div>
</div>
<%- include("../partials/footer") %>